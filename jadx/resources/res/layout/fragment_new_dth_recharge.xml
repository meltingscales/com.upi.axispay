        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/recharge_input" android:background="@drawable/rounded_white_background" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0x7f070228" android:layout_marginTop="0x7f0700f5" android:layout_marginRight="0x7f070228" android:layout_marginBottom="0x7f070228" android:layout_below="@+id/fragment_connection" android:translationZ="18dp">
            <com.upi.axispay.custom.FloatingInputLayout android:id="@+id/dth_num_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0x7f070228" android:layout_marginTop="0x7f070228" android:layout_marginRight="0x7f070228" android:layout_marginBottom="0x7f070229" app:feditTextId="@+id/dth_num" app:ffieldHint="@string/dth_number"/>
            <com.upi.axispay.custom.FloatingInputLayout android:id="@+id/operator_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0x7f070228" android:layout_marginRight="0x7f070228" android:layout_marginBottom="0x7f070229" app:feditTextId="@+id/mobile_operator" app:ffieldHint="@string/curent_operator" app:frightText="@string/change_small" app:frightTextId="@+id/operator_change"/>
            <com.upi.axispay.custom.FloatingInputLayout android:id="@+id/amount_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0x7f070228" android:layout_marginRight="0x7f070228" app:feditTextId="@+id/amount" app:ffieldHint="@string/amount" app:ffieldIcon="@drawable/rupees_bur" app:frightText="@string/browse_plan"/>
            <com.upi.axispay.custom.FloatingInputLayout android:id="@+id/promo_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="0x7f070228" android:layout_marginRight="0x7f070228" app:ffieldHint="@string/promo_code" app:frightText="@string/verify" app:frightTextId="@+id/verify_code"/>
